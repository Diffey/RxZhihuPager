<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!--action bar color-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--status bar color-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--window background-->
        <item name="android:windowBackground">@color/colorPrimaryBg</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <!--no actionbar and title-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- drawer back style -->
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowStyle</item>
        <item name="actionOverflowButtonStyle">@style/AppTheme.Overflow</item>

        <!--actionbar text color-->
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
    </style>


    <style name="AppTheme.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="AppTheme.Overflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <!--<item name="android:src">@drawable/ic_menu</item>-->
    </style>

    <!-- popup style -->
    <style name="ToolBarStyle">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="AppTheme.TranslucentTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!--Android 5以上可以设置状态栏颜色-->
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!--<style name="ColorTranslucentTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <!--<item name="android:windowTranslucentStatus">false</item>-->
    <!--<item name="android:windowTranslucentNavigation">true</item>-->
    <!--<item name="android:statusBarColor">@color/color_31c27c</item>-->
    <!--</style>-->

</resources>
